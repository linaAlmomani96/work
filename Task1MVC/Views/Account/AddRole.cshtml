@model RoleModel
@{
    ViewData["Title"] = "Addrole";
}

@section Body{
    <div class="container">
        <form method="post">
        <div class="row space">

                <div class="col-md-2">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-md-4">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name"></span>

                </div>
        </div>
        <div class="row space">
            <div class="col-md-2 col-md-offset-4">
                <input type="submit" value="Add" class="btn btn-primary" asp-action="CreateRole" />
            </div>
        </div>
            </form>
    </div>
}
