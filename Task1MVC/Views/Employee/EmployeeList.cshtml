@model List<Employee>  
@{
    ViewData["Title"] = "Employee List";
}

@section Body{ 
    <form method="post">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h1>Employee List</h1>
                </div>
            </div>
            <div class="row space">
                <div class="col-md-2 bold">First Name</div>
                <div class="col-md-3"><input type="text" class="form-control" name="txtName" /></div>
                <div class="col-md-1"><input type="submit" value="Search" class="btn btn-block" asp-action="Search" /></div>
            </div>
            <div class="row space">
                <table class="table table-hover" >
                    <thead>
                        <tr>
                            <th>Photo</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Phone</th>
                            <th>Salary</th>
                            <th>Hair Date</th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td><img src="@item.photo" width="30" height="30" /></td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.Phone</td>
                            <td>@item.Salary</td>
                            <td>@{@item.HireDate.ToString().Substring(0,9)}</td>
                            <td>
                                <a asp-action="GetById" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </form>

}